<div class="min-h-screen bg-gray-50">
  <!-- Search Header Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-4 text-center">
          Search Stack Overflow
        </h1>
        <.search_form query={@query} loading={@loading} />
      </div>
    </div>
  </div>
  <!-- Main Content Area -->
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-[240px_1fr] lg:grid-cols-[260px_1fr] gap-8 py-8">
      <!-- Left Sidebar - Recent Searches -->
      <aside class="hidden md:block">
        <.recent_searches_sidebar recent_searches={@recent_searches} />
      </aside>
      <!-- Main Content -->
      <main class="min-w-0">
        <%= if @loading do %>
          <.loading_state />
        <% else %>
          <%= if @error do %>
            <.error_state error={@error} />
          <% else %>
            <%= if @selected_question do %>
              <.question_display
                question={@selected_question}
                answers={@answers}
                llm_ranked_answers={@llm_ranked_answers}
                active_tab={@active_tab}
                llm_loading={@llm_loading}
              />
            <% else %>
              <.empty_state />
            <% end %>
          <% end %>
        <% end %>
      </main>
    </div>
  </div>
</div>
